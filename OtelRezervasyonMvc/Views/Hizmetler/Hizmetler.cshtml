@using OtelRezervasyonMvc.Models.Entity
@model List<Tbl_Hizmetlerimiz>
@{
    ViewBag.Title = "Hizmetler";
    Layout = "~/Views/Shared/_OtelVitrin.cshtml";
}

<!-- //w3l-header -->
<section class="w3l-breadcrumb">
    <div class="breadcrum-bg py-sm-5 py-4">
        <div class="container py-lg-3">

            <h2>Hizmetlerimiz</h2>
            <p><a href="/Anasayfa/Index">Anasayfa</a> &nbsp; / &nbsp; Hizmetlerimiz</p>

        </div>
    </div>
</section>
<!--  services section -->
<section class="w3l-servicesblock1" id="service">
    <div class="features-with-17_sur py-5">
        <div class="container py-lg-5 py-sm-4">
            <div class="features-with-17-top_sur">
                <div class="row">
                    <div class="col-lg-4 col-md-6 align-self">
                        <h3 class="title-small">OTEL MVC PROJESİ</h3>
                        <p>
                            Tüm odalarımızda mini buzdolabı , televizyon , klima , wifi ,sıcak su gibi bileşenler ve daha
                            fazlası bulunmaktadır.7/24 resepsiyonu arayabilirsiniz.
                        </p>
                    </div>
                    @foreach (var x in Model)
                    {
                        if (x.ID == 1)
                        {
                            <div class="col-lg-4 col-md-6 mt-md-0 mt-4">
                                <div class="features-with-17-right-tp_sur">
                                    <div class="features-with-17-left1">
                                        <span class="fa fa-check-circle" aria-hidden="true"></span>
                                    </div>
                                    <div class="features-with-17-left2">
                                        <h5>@x.FirstTitle</h5>
                                        <h6><a href="#url">@x.SecondTitle</a></h6>
                                        <p>
                                            @x.Content
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                        if (x.ID == 2)
                        {
                            <div class="col-lg-4 col-md-6 mt-lg-0 mt-sm-5 mt-4">
                                <div class="features-with-17-right-tp_sur">
                                    <div class="features-with-17-left1">
                                        <span class="fa fa-cutlery" aria-hidden="true"></span>
                                    </div>
                                    <div class="features-with-17-left2">
                                        <h5>@x.FirstTitle</h5>
                                        <h6><a href="#url">@x.SecondTitle</a></h6>
                                        <p>
                                            @x.Content
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                        if (x.ID == 3)
                        {
                            <div class="col-lg-4 col-md-6 mt-sm-5 mt-4">
                                <div class="features-with-17-right-tp_sur">
                                    <div class="features-with-17-left1">
                                        <span class="fa fa-wifi" aria-hidden="true"></span>
                                    </div>
                                    <div class="features-with-17-left2">
                                        <h5>@x.FirstTitle</h5>
                                        <h6><a href="#url">@x.SecondTitle</a> </h6>
                                        <p>
                                            @x.Content
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                        if (x.ID == 4)
                        {
                            <div class="col-lg-4 col-md-6 mt-sm-5 mt-4">
                                <div class="features-with-17-right-tp_sur">
                                    <div class="features-with-17-left1">
                                        <span class="fa fa-bath" aria-hidden="true"></span>
                                    </div>
                                    <div class="features-with-17-left2">
                                        <h5>@x.FirstTitle</h5>
                                        <h6><a href="#url">@x.SecondTitle</a> </h6>
                                        <p>
                                            @x.Content
                                        </p>
                                    </div>
                                </div>
                            </div>

                        }
                        if (x.ID == 5)
                        {
                            <div class="col-lg-4 col-md-6 mt-sm-5 mt-4">
                                <div class="features-with-17-right-tp_sur">
                                    <div class="features-with-17-left1">
                                        <span class="fa fa-user-secret" aria-hidden="true"></span>
                                    </div>
                                    <div class="features-with-17-left2">
                                        <h5>@x.FirstTitle </h5>
                                        <h6><a href="#url">@x.SecondTitle</a> </h6>
                                        <p>
                                            @x.Content
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<section class="w3l-stats">
    <div class="main-w3 py-5">
        <div class="container py-lg-3">
            <div class="row align-items-center">
                <div class="col-md-6 title">
                    <h3 class="title-big">Otelimizin Tesisleri</h3>
                    <img src="~/hotels-starter/assets/images/facilities.jpg" alt="" class="img-fluid">
                </div>
                <div class="col-md-6 main-cont-wthree-fea text-center">
                    <div class="row">
                        <div class="col-6 pr-2 mt-4">
                            <div class="grids-speci1">
                                <span class="fa fa-television"></span>
                                <h3 class="title-spe">Tv</h3>
                                <p>4K Kalitede Görüntü</p>
                            </div>
                        </div>
                        <div class="col-6 pl-2 mt-4">
                            <div class="grids-speci1">
                                <span class="fa fa-motorcycle"></span>
                                <h3 class="title-spe">Bisiklet</h3>
                                <p>Tur ve Geziler</p>
                            </div>
                        </div>
                        <div class="col-6 pr-2 mt-4">
                            <div class="grids-speci1">
                                <span class="fa fa-cutlery"></span>
                                <h3 class="title-spe">Restaurant</h3>
                                <p>Açık Büfe</p>
                            </div>
                        </div>
                        <div class="col-6 pl-2 mt-4">
                            <div class="grids-speci1">
                                <span class="fa fa-bed"></span>
                                <h3 class="title-spe">Lüks Odalar</h3>
                                <p>King Room</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<section class="w3l-feature-2">
    <div class="grid top-bottom py-5">
        <div class="container py-md-5">
            <h3 class="title-big text-center">Otelimiz En İnce Ayrıntılarına Kadar Usta Mimarlarımız Tarafından Tasarlandı. </h3>
            <div class="middle-section row mt-lg-5 pt-md-3">
                <div class="three-grids-columns col-lg-4 col-md-6">
                    <img src="~/hotels-starter/assets/images/p1.jpg" alt="" class="img-fluid">
                    <div class="info">
                        <h4><a href="#url"> Restaurant and Bar</a></h4>
                        <p>
                            Restaurantımız saat 08:00-23.30 arası , barımız 10:00-02:00 arasında hizmet vermektedir.
                        </p>
                    </div>
                </div>
                <div class="three-grids-columns col-lg-4 col-md-6 mt-md-0 mt-4">
                    <img src="~/hotels-starter/assets/images/slide2.jpg" alt="" class="img-fluid">
                    <div class="info">
                        <h4> <a href="#url"> Toplantılar ve Organizasyonlar </a></h4>
                        <p>
                            Kurumsal müşterileriniz için sizlere sunmuş olduğumuz yemekli ve içkili etkinliklerini planlayabilirsiniz.
                        </p>
                    </div>
                </div>
                <div class="three-grids-columns col-lg-4 col-md-6 mt-lg-0 mt-4">
                    <img src="~/hotels-starter/assets/images/slide3.jpg" alt="" class="img-fluid">
                    <div class="info">
                        <h4> <a href="#url"> Spa ve Sauna </a></h4>
                        <p>
                            7/24 sıcak su hizmetiyle otelimizde spa ve sauna hizmetinden faydalanabilirsiniz.
                        </p>
                       
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
