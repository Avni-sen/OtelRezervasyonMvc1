@using OtelRezervasyonMvc.Models.Entity
@model List<Tbl_İletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_OtelVitrin.cshtml";
}



<section class="w3l-breadcrumb">
    <div class="breadcrum-bg py-sm-5 py-4">
        <div class="container py-lg-3">
            <h2>İletişim</h2>
            <p><a href="/Anasayfa/Index">Anasayfa</a> &nbsp; / &nbsp; İletişim</p>

        </div>
    </div>
</section>
@foreach (var x in Model)
{
<!-- contact1 -->
<section class="w3l-contact-1 py-5">
    <div class="contacts-9 py-lg-5 py-sm-4">
        <div class="container">
            <div class="d-grid contact-view">
                <div class="cont-details">
                    <p>Bize Ulaşmak Çok Kolay</p>
                    <br />
                    <h3 class="title-big">İletişim Bilgilerimiz</h3>
                </div>
                <div class="map-content-9">
                    <p>
                         
                        @x.Aciklama
                    </p>
                </div>
            </div>
            <div class="map-iframe my-5">
                <iframe src="@x.Map"
                        width="100%" height="300" frameborder="0" style="border: 0px; "
                        allowfullscreen=""></iframe>
            </div>
            <div class="d-grid contact-view">
                <div class="cont-details">
                    <div class="cont-top">
                        <div class="cont-left text-center">
                            <span class="fa fa-phone text-primary"></span>
                        </div>
                        <div class="cont-right">
                            <h6>Telefon Numaramız</h6>
                            <p><a href="tel:+905443042664">@x.Telefon</a></p>
                        </div>
                    </div>
                    <div class="cont-top margin-up">
                        <div class="cont-left text-center">
                            <span class="fa fa-envelope-o text-primary"></span>
                        </div>
                        <div class="cont-right">
                            <h6>Email Adresimiz</h6>
                            <p><a href="mailto:senavni35@gmail.com" class="mail">@x.Mail</a></p>
                        </div>
                    </div>
                    <div class="cont-top margin-up">
                        <div class="cont-left text-center">
                            <span class="fa fa-map-marker text-primary"></span>
                        </div>
                        <div class="cont-right">
                            <h6>Adres Bilgilerimiz</h6>
                            <p>@x.Adres</p>
                        </div>
                    </div>
                </div>
                @*//Burada hem listele hem ekle işlemi yapamayacağımız için burda partial view kullanarak mail alma kısmını yapabiliriz.*@
                @Html.Action("mesajGonder" ,"İletisim")
              
            </div>
        </div>
    </div>
</section>
<!-- /contact1 -->
}